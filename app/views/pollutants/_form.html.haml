= form_for(@pollutant) do |f|
  - if @pollutant.errors.any?
    #error_explanation
      %h2
        = pluralize(@pollutant.errors.count, "error")
        prohibited this pollutant from being saved:
      %ul
        - @pollutant.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :hour
    %br/
    = f.text_field :hour
  .field
    = f.label :station
    %br/
    = f.text_field :station
  .field
    = f.label :pm10
    %br/
    = f.text_field :pm10
  .field
    = f.label :O3
    %br/
    = f.text_field :O3
  .field
    = f.label :nO2
    %br/
    = f.text_field :nO2
  .field
    = f.label :sO2
    %br/
    = f.text_field :sO2
  .field
    = f.label :CO
    %br/
    = f.text_field :CO
  .field
    = f.label :pm25
    %br/
    = f.text_field :pm25
  .actions
    = f.submit
